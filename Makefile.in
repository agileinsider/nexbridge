CC=@CC@
CFLAGS=-g @INCLUDES@ -Wall -std=gnu99
LD=@LDFLAGS@ -lavahi-client -lavahi-common -lpthread
DISTDIR=nexbridge-0.1
DISTFILE=${DISTDIR}.tar.gz
BIN_DIR=/usr/bin/

all:  nexbridge

nexbridge: nexbridge.o mdns_avahi.o
	$(CC) $(CFLAGS) nexbridge.o mdns_avahi.o -o nexbridge $(LD)

clean:	
	rm *.o nexbridge *~

install: nexbridge
	install -s nexbridge $(BIN_DIR)

install_fedora: nexbridge
	install -s nexbridge $(BIN_DIR)

uninstall:
	rm -f $(BIN_DIR)/nexbridge
